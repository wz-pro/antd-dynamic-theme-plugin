{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./types",
    "lib": ["es2017"],
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "removeComments": true,
    "useUnknownInCatchVariables": false,
    "types": ["node", "jest"],
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
